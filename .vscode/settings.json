{
  // Vue.js 项目配置 - 解决 Vetur 找不到配置文件的问题
  "vetur.projects": [
    "./frontend/literature-review-frontend"
  ],
  "vetur.config.settings": {
    "vetur.useWorkspaceDependencies": true,
    "vetur.experimental.templateInterpolationService": true
  },
  "vetur.ignoreProjectWarning": true,
  "vetur.validation.template": false,
  "vetur.validation.style": false,
  "vetur.validation.script": false,

  // Vue Language Features (Volar) 配置 - Vue 3 推荐
  "vue.server.hybridMode": true,
  "vue.server.includeLanguages": ["vue", "javascript", "typescript"],

  // TypeScript 配置
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,

  // 文件关联
  "files.associations": {
    "*.vue": "vue"
  },

  // 格式化配置
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Vue 文件格式化
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },

  // JavaScript/TypeScript 格式化
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Python 配置
  "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,

  // 工作区搜索排除
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/data": true,
    "**/logs": true
  },

  // 文件监视排除
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/venv/**": true,
    "**/data/**": true,
    "**/logs/**": true,
    "**/.git/**": true
  }
}